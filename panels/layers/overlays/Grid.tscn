const vec4 dark_color  = vec4(0.9, 0.9, 0.9, 1.0);
const vec4 light_color = vec4(0.1, 0.1, 0.1, 1.0);
const vec4 transparent = vec4(0.0, 0.0, 0.0, 0.0);

void fragment(){
	bool parity;

	if (COLOR.r > 0.5) {
		parity = (int(FRAGCOORD.x) / 10) % 2 == 0;
	} else {
		parity = (int(FRAGCOORD.y) / 10) % 2 == 1;
	}
	
	if (parity) {
		vec4 screen_color = textureLod(SCREEN_TEXTURE, SCREEN_UV, 0.0);
		float v = max(max(screen_color.r, screen_color.g), screen_color.b);
		if (v > 0.5) {
			COLOR = light_color;
		} else {
			COLOR = dark_color;
		}
	} else {
		COLOR = transparent;
	}
}"
